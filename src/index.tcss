Input {
    background: black 0%;
    border: none;
    height: 1;
  }
  
  ModalScreen {
    align: center middle;
    background: $background 20%;
  }
  
  .dialog {
    padding: 0 1;
    width: 50;
    height: 11;
    border: round white;
    background: $surface;
  }
  
  #question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
  }
  
  .row {
    height: 1;
    layout: horizontal;
  }
  
  .row > Label {
    color: $accent;
  }